generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // opcional mas ajuda em migrações no Supabase
}

model ContractTemplate {
  id        String   @id @default(uuid())
  name      String // Ex: "Contrato Netxpert - IAttend"
  slug      String   @unique // Ex: "netxpert-iattend"
  version   String // Ex: "1.0.0"
  content   String // Texto do contrato (markdown ou HTML com {{placeholders}})
  createdAt DateTime @default(now())

  instances ContractInstance[]
}

model ContractInstance {
  id         String           @id @default(uuid())
  templateId String
  template   ContractTemplate @relation(fields: [templateId], references: [id])

  clientName     String
  clientEmail    String
  clientDocument String
  clientAddress  String // novo: {{ENDERECO_DO_CLIENTE}}
  clientPhone    String // novo: {{TELEFONE_DO_CLIENTE}}

  systemName String // "IAttend", "Telesys", etc.
  planName   String // "Plano Mensal", etc.
  planValue  Decimal @db.Decimal(10, 2) // novo: {{VALOR_MENSAL}}

  startDate DateTime

  // status
  status ContractStatus @default(PENDING)

  token     String   @unique
  createdAt DateTime @default(now())

  // Dados da assinatura
  signedAt        DateTime?
  signerIp        String?
  signerUserAgent String?
  signatureUrl    String?
  pdfUrl          String?
  dataHash        String?

  // novo: texto final do contrato preenchido
  content String // snapshot do contrato com todos os placeholders já substituídos
}

enum ContractStatus {
  PENDING
  SIGNED
  EXPIRED
  CANCELED
}
